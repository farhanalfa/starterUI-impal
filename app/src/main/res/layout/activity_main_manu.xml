<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainManu"
    android:background="#FFB000">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/BG3"
        android:layout_marginBottom="-530dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/person2"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sun Jose"
        android:textColor="#FFF0CD"
        android:textSize="25"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="138dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="121dp"
        android:layout_height="102dp"
        android:background="@drawable/rounded_ractangel2"
        android:text="Wish"
        android:textColor="#FFF0CD"
        android:textSize="25"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="379dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="121dp"
        android:layout_height="102dp"
        android:background="@drawable/rounded_ractangel2"
        android:text="Budget"
        android:textColor="#FFF0CD"
        android:textSize="25"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="379dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="121dp"
        android:layout_height="102dp"
        android:background="@drawable/rounded_ractangel2"
        android:text="Debt"
        android:textColor="#FFF0CD"
        android:textSize="25"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="274dp"
        tools:layout_editor_absoluteY="379dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose our services"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="328dp"
        android:textColor="#FFF0CD"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 Sept 2019"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="172dp" />

    <android.support.v7.widget.CardView
        android:layout_width="304dp"
        android:layout_height="90dp"
        app:cardBackgroundColor="#FFCF73"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="206dp"
        app:cardCornerRadius="20"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Balance"
                    android:textAlignment="center"
                    android:textColor="#FFFCA500"
                    android:textSize="20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$35000"
                    android:textColor="#000"
                    android:textSize="30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Debt"
                    android:textAlignment="center"
                    android:textColor="#FCA500"
                    android:textSize="20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-$5000"
                    android:textColor="#000"
                    android:textSize="30" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>